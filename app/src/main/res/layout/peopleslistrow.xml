<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">
    <!-- Thumbnail Image -->
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/Profilepicture"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/ProfileName"
        android:layout_gravity="center"
        android:text="List Text"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_alignBottom="@+id/Profilepicture"
        android:layout_toRightOf="@+id/Profilepicture"
        android:layout_toEndOf="@+id/Profilepicture"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="listText2"
        android:textColor="@color/colorPrimary"
        android:id="@+id/phonenumber"
        android:layout_below="@+id/ProfileName"
        android:layout_alignLeft="@+id/ProfileName"
        android:layout_alignStart="@+id/ProfileName"
        android:visibility="invisible"/>

    <RatingBar
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ratingBar"
        android:numStars="1"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp"
        android:layout_alignTop="@+id/Profilepicture"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/Profilepicture" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ideaname"
        android:textColor="@color/colorPrimary"
        android:id="@+id/IdeaName"
        android:layout_alignTop="@+id/ProfileName"
        android:layout_toRightOf="@+id/ProfileName"
        android:layout_toEndOf="@+id/ProfileName"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ideadesc"
        android:textColor="@color/colorPrimary"
        android:id="@+id/Ideadesc"
        android:layout_alignTop="@+id/IdeaName"
        android:layout_alignLeft="@+id/IdeaName"
        android:layout_alignStart="@+id/IdeaName"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/ProfileEmail"
        android:layout_alignBottom="@+id/IdeaName"
        android:layout_toRightOf="@+id/Ideadesc"
        android:layout_toEndOf="@+id/Ideadesc"
        android:visibility="invisible"/>
</RelativeLayout>