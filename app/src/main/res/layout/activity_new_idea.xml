<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newideaappbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.v7.widget.Toolbar
            android:id="@+id/myteamtoolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/newIdeaviewpager"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_above="@+id/previous"
        android:layout_weight="1"
        android:layout_below="@+id/newideaappbar">

    </android.support.v4.view.ViewPager>

    <Button
        android:id="@+id/previous"
        android:background="@drawable/buttonstyle"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newIdeaviewpager"
        android:layout_alignTop="@+id/next"
        android:drawableLeft="@drawable/ic_keyboard_arrow_left_white_36dp" />

    <Button
        android:id="@+id/next"
        android:background="@drawable/buttonstyle"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_white_36dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:background="@drawable/buttonstyle"
        android:layout_width="180dp"
        android:textColor="@color/textColorPrimary"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/createnewIdea"
        android:layout_alignBottom="@+id/previous"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
