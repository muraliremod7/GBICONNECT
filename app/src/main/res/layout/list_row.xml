<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/listimage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/listtext"
        android:layout_gravity="center"
        android:text="List Text"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/listimage"
        android:layout_toRightOf="@+id/listimage"
        android:layout_toEndOf="@+id/listimage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="listText2"
        android:id="@+id/listtextdate"
        android:layout_below="@+id/listtext"
        android:layout_alignLeft="@+id/listtext"
        android:layout_alignStart="@+id/listtext" />

    <RatingBar
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ratingBar"
        android:numStars="1"
        android:layout_alignBottom="@+id/listtextdate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"/>
</RelativeLayout>