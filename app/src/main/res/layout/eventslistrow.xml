<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Event Name"
        android:id="@+id/eventname"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
         />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fromdate"
        android:id="@+id/fromdate"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/eventname"
        android:layout_alignLeft="@+id/eventname"
        android:layout_alignStart="@+id/eventname" />

    <TextView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="To"
        android:id="@+id/textView40"
        android:layout_below="@+id/eventname"
        android:layout_toRightOf="@+id/fromdate"
        android:layout_toEndOf="@+id/fromdate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Todate"
        android:id="@+id/todate"
        android:layout_alignTop="@+id/textView40"
        android:layout_toRightOf="@+id/textView40"
        android:layout_toEndOf="@+id/textView40" />


</RelativeLayout>