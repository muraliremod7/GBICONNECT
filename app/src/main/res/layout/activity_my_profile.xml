<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/editprofileLayout"
        android:visibility="gone">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:background="@color/colorPrimary">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/closeForgotinmyprofile"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_keyboard_arrow_left_white_36dp"
                    android:layout_marginLeft="10dp" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:padding="10dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:layout_marginTop="10dp"
                    android:hint="Enter New Name"
                    android:ems="10"
                    android:theme="@style/TextLabel"
                    android:id="@+id/epnewname" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:theme="@style/TextLabel"
                    android:layout_marginTop="5dp"
                    android:hint="Enter New Number"
                    android:id="@+id/epnewnum" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:theme="@style/TextLabel"
                    android:layout_marginTop="5dp"
                    android:hint="Enter New Email"
                    android:id="@+id/epnewemail" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/epcompany"
                    android:theme="@style/TextLabel"
                    android:layout_marginTop="5dp"
                    android:hint="Company Name" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/epposition"
                    android:theme="@style/TextLabel"
                    android:layout_marginTop="5dp"
                    android:hint="Position" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Interests"
                    android:textColor="@color/TextColorHint"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/textView27" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal">

                    <CheckBox
                        android:background="@drawable/selectcheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Advertising"
                        android:id="@+id/advertising" />
                    <View
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"/>
                    <CheckBox
                        android:background="@drawable/selectcheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BigData"
                        android:id="@+id/bigdata" />
                    <View
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"/>
                    <CheckBox
                        android:background="@drawable/selectcheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Design"
                        android:id="@+id/design" />
                    <View
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"/>
                    <CheckBox
                        android:background="@drawable/selectcheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VR"
                        android:id="@+id/vr" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal">

                    <CheckBox
                        android:background="@drawable/selectcheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gaming"
                        android:id="@+id/gaming" />
                    <View
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"/>
                    <CheckBox
                        android:background="@drawable/selectcheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hardware"
                        android:id="@+id/hardware" />
                    <View
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"/>
                    <CheckBox
                        android:background="@drawable/selectcheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entrepreneurship"
                        android:id="@+id/entrepreneurship" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:background="@drawable/selectcheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Marketing"
                        android:id="@+id/marketing" />
                    <View
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"/>
                    <CheckBox
                        android:background="@drawable/selectcheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UI"
                        android:id="@+id/ui" />
                    <View
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"/>
                    <CheckBox
                        android:background="@drawable/selectcheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UX"
                        android:id="@+id/ux" />
                    <View
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"/>
                    <CheckBox
                        android:background="@drawable/selectcheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open Source"
                        android:id="@+id/opensource" />
                </LinearLayout>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:text="Submit"
                    android:background="@color/colorAcent"
                    android:id="@+id/profileiupdate"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/myprofilelayout"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/myprofileprofilepic"
                android:src="@drawable/user"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Lead Name"
                    style="@style/CodeFont"
                    android:textColor="@color/TextColorHint"
                    android:id="@+id/textView28"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="leadname"
                    style="@style/CodeFont"
                    android:textColor="@color/TextColorHint"
                    android:id="@+id/myprofilename" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Phone"
                    style="@style/CodeFont"
                    android:textColor="@color/TextColorHint"
                    android:textStyle="bold"
                    android:id="@+id/textView29" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="phone"
                    style="@style/CodeFont"
                    android:textColor="@color/TextColorHint"
                    android:id="@+id/myprofilephone" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="IdeaName"
                    style="@style/CodeFont"
                    android:textColor="@color/TextColorHint"
                    android:textStyle="bold"
                    android:id="@+id/textView30" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="ideaname"
                    style="@style/CodeFont"
                    android:textColor="@color/TextColorHint"
                    android:id="@+id/myprofileideaname"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Idea Description"
                    android:textStyle="bold"
                    style="@style/CodeFont"
                    android:textColor="@color/TextColorHint"
                    android:id="@+id/textView3" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="ideadescription"
                    style="@style/CodeFont"
                    android:textColor="@color/TextColorHint"
                    android:id="@+id/myprofiledesc"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Team Members"
                    style="@style/CodeFont"
                    android:textColor="@color/TextColorHint"
                    android:textStyle="bold"
                    android:id="@+id/textView39" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="teamemebres"
                    style="@style/CodeFont"
                    android:textColor="@color/TextColorHint"
                    android:id="@+id/myprofileteammem"/>
            </LinearLayout>

            <TextView
                android:layout_width="130dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Interests"
                android:textStyle="bold"
                style="@style/CodeFont"
                android:textColor="@color/TextColorHint"
                android:layout_marginTop="10dp"
                android:id="@+id/textView36" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
