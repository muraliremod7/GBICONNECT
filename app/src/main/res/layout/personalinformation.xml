<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:fillViewport="false">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="530dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp">
    <ImageView
        android:id="@+id/UploadImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/person" />

    <TextView
        android:id="@+id/uploadimage"
        android:textColor="@color/textColorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UploadImage"
        android:layout_centerHorizontal="true"
        android:text="Upload Image"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/leadname"
        android:textColorHint="@color/textColorPrimary"
        android:background="@drawable/edittextstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uploadimage"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Enter Lead Name"
        android:layout_marginTop="10dp"
        android:inputType="textPersonName" >
    </EditText>

    <EditText
        android:id="@+id/phonenumberr"
        android:textColorHint="@color/textColorPrimary"
        android:background="@drawable/edittextstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/leadname"
        android:ems="10"
        android:hint="Enter Phone Number"
        android:layout_marginTop="5dp"
        android:inputType="phone" />

    <EditText
        android:id="@+id/email"
        android:textColorHint="@color/textColorPrimary"
        android:background="@drawable/edittextstyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/phonenumberr"
        android:ems="10"
        android:hint="Enter Email"
        android:layout_marginTop="5dp"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/ideaname"
        android:textColorHint="@color/textColorPrimary"
        android:background="@drawable/edittextstyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/email"
        android:ems="10"
        android:hint="Enter Idea Name"
        android:layout_marginTop="5dp"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/ideadescription"
        android:textColorHint="@color/textColorPrimary"
        android:background="@drawable/edittextstyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ideaname"
        android:ems="10"
        android:lines="3"
        android:maxLength="50"
        android:scrollbars="vertical"
        android:layout_marginTop="5dp"
        android:hint="Enter Idea Description"
        android:inputType="textMultiLine" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:textColorHint="@color/textColorPrimary"
        android:background="@drawable/edittextstyle"
        android:id="@+id/teammembers"
        android:hint="Enter team members with , Seperated"
        android:layout_below="@+id/ideadescription"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
</ScrollView>