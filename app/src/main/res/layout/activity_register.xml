
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.brain.revanth.sampleapplication2.RegisterActivity" >
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:visibility="gone"
                android:id="@+id/UploadImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/person" />
            <Button
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SelectImage"
                android:padding="8dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/uploadimage"
                android:background="@color/colorAcent"/>
            <EditText
                android:id="@+id/reguserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:inputType="text"
                android:hint="Enter User Name"/>
            <EditText
                android:id="@+id/reguserMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="phone"
                android:hint="Enter Mobile"/>
            <EditText
                android:id="@+id/reguserEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="textEmailAddress"
                android:hint="Enter Email"/>
            <EditText
                android:id="@+id/reguserCollege"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:hint="Enter College Name"/>
            <EditText
                android:id="@+id/reguserPin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="numberPassword"
                android:hint="Enter Pin Number"/>
            <EditText
            android:id="@+id/reguserConPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="numberPassword"
            android:hint="Enter Confirm Pin"/>
            <EditText
                android:id="@+id/reguserLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:hint="Enter Location"/>
            <EditText
                android:id="@+id/reguserdesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="textAutoComplete"
                android:hint="Enter About Yourself"/>
            <Button
                android:id="@+id/regperInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttonstyle"/>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
